{{ define "header" }}
    <section id="article-header">
        <article>
            <h1>
                <a href={{ printf "/articles/%v" .Id }}>
                    {{ .Title }}
                </a>
            </h1>
        </article>
        <span class="article-info">Posted by Max Conradt {{ .Since }}. {{ .Views }} views.</span>
    </section>
{{ end }}
